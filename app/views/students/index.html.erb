<div class="container" ng-app="studentApp">



<p><%= link_to ' New Student',new_student_path, class: "icon-user-add btn btn-success pull-right" %></p>

<h1>Students</h1>
<hr>
<div ng-controller="mainController">
<input type="search" ng-model="filterStudents" class="form-control" placeholder="Filter List (ex. Tammy, Prozac, 2002)">
<div class="top30"></div>

    <span ng-repeat="student in students | filter: filterStudents">


        <div class="col-sm-4">
        <h3>{{student.name}}</h3>
        
        
    
        <p>
        <a href="students/{{student.id}}" class="btn btn-default">View File</a>
        <a href="students/{{student.id}}/edit" class="btn btn-info icon-pencil"></a>
         <%= link_to '', 'students/{{student.id}}', method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning icon-remove" %>
        </p>
        <label>Nurse:</label> 
        {{student.nurse | capitalize}}
        </div>

</span>
</span>




